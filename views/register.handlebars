<div class="register">
    <div class="register-errors">
        {{#if errors}}
            {{#each errors}}
                <p class="error-message">{{this.msg}}</p>
            {{/each}}
        {{/if}}
    </div>
    <h1 align="center">Register</h1>
    <form method="POST" action="/user/register" style="display: flex; flex-direction:column;">
        <input type="text" name="username" placeholder="username" {{#if username}} value="{{this.username}}"{{/if}}>
        <input type="password" name="password" placeholder="password" {{#if password}} value="{{this.password}}" {{/if}}>
        <input type="password" name="password2" placeholder="matching password" {{#if password2}} value="{{this.password2}}" {{/if}}>
        <input type="text" name="email" placeholder="email" {{#if email}} value="{{this.email}}"{{/if}}>
        <input type="submit">
    </form>
</div>